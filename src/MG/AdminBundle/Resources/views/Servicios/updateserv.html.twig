{% extends 'MGAdminBundle:Bases:base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="span12">
            <div class="row">
                <h3>Modificar Servicios</h3>
                <form action="{{  path('mg_serv_update',{'servId': servId, 'empId':empId}) }}" method="POST" class="update_form">
                    <fieldset>
                        {{ form_errors(editServForm) }}

                        {{ form_label(editServForm.nombre , 'Nombre del servicio') }}
                        {{ form_widget(editServForm.nombre ) }}

                        {{ form_label(editServForm.descripcion , 'Descripción') }}
                        {{ form_widget(editServForm.descripcion ) }}

                        {{ form_label(editServForm.precio , 'Precio') }}
                        {{ form_widget(editServForm.precio ) }}

                        {{ form_label(editServForm.enabled , 'Activo') }}
                        {{ form_widget(editServForm.enabled ) }}
                        <a data-content="Determinará si el servicio es visible por los usuarios y si pueden asignarse usuarios y clientes." data-original-title="¿Que diferencia hay entre activo e inactivo?" class="btn toolTip">?</a>

                        {{ form_rest(editServForm) }}
                    </fieldset>
                    <input type="submit" class="btn btn-success" value="Guardar">
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <a href="{{ path('mg_servadmin_homepage', {'page': 1}) }}" class="btn btn-danger">Volver</a>
                    {% else %}
                        <a href="{{ path('mg_serv_by_empresa', {'page': 1, 'empId':empId}) }}" class="btn btn-danger">Volver</a>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block customjs %}
    <script src="{{ asset('bundles/adminbundle/js/custom.js') }}"></script>
{% endblock %}