{% extends 'MGRepoBundle:Base:base_repo.html.twig' %}

{% block content %}
    <div class="container-fluid" style="margin-top: 50px; padding: 0">

    <div class="row-fluid">
        <div class="span7" style="padding-left: 10px">
            <h2>Notificaciones</h2>
        </div>
        <table class="table table-striped table-hover" id="notifCont">

            {% for contratacion in solicitudesARevisar%}
                <tr>
                    <td>Tu solicitud de contrataci√≥n con fecha de {{ contratacion.fechaSolicitud|date('d-m-Y') }} esta en espera de que revises los servicios sugeridos para la contratacion.</td>
                    <td>
                        <div class="btn-group pull-right dropdown">
                            <a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="icon-white icon-cog"></i> Acciones
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('mg_detail_contratacion', {'contId':contratacion.id}) }}">Gestionar</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('mg_delete_contratacion', {'contId':contratacion.id}) }}" class="btn-danger" style="color: white">Descartar</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}