{% extends 'MGDemoBundle:Bases:base_front.html.twig' %}

{% block customcss %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/repobundle/css/boxes.css') }}">
{% endblock %}

{% block cabecera %}
{% endblock %}

{% block content %}
    <div class="container" style="margin-top: 100px">
        <div class="offset4 span4 topbox">
            <a href="{{ path('mg_landing_front_homepage') }}">
                <img src="{{ asset('bundles/landingfront/images/logo.png') }}" alt="Mi Gestion Logo">
            </a>
        </div>
        <div class="offset4 span4 requestp">
            <form class="boxes">
            {% if target == 'ad' %}
                <label for="username">Usuario</label>
                <input type="text" id="username" name="_username" value="Demouser" required="required" />

                <label for="password">Contraseña</label>
                <input type="password" id="password" name="_password" value="demopass" required="required" />

                <div class="box_controls">

                <a href="{{ path('mg_demo_admin') }}" class="btn btn-success btn-block">Enviar</a>
            {% else %}
                    <label for="username">Usuario</label>
                    <input type="text" id="username" name="_username" value="Democliente" required="required" />

                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="_password" value="demopass" required="required" />

                    <div class="box_controls">

                    <a  href="{{ path('mg_demo_user_panel') }}" class="btn btn-success btn-block">Enviar</a>
            {% endif %}
                    <label  class="rmblabel" for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />Recordar
                    </label>
                </div>
            </form>
            <p>
                <a href="#">¿No recuerdas tu contraseña?</a>
            </p>
            <p>
                <a href="#"><< Volver a Mi Gestión Online</a>
            </p>
        </div>
    </div>
{% endblock %}

