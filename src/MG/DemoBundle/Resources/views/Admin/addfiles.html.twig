{% extends 'MGDemoBundle:Bases:base_admin.html.twig' %}

{% block customstyle %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/adminbundle/css/jquery.mCustomScrollbar.css') }}"
          xmlns="http://www.w3.org/1999/html">
{% endblock %}

{% block content %}

        <div class="container" style="margin-top: 50px; margin-bottom: 25px">
            <div class="span12" style="min-width: 320px">
                <div class="row">
                    <div class="span12">
                        <h4>Detalles Gestión</h4>
                        <table class="table table-bordered table-condensed table-striped">
                            <tr>
                                <td>Usuario</td>
                                <td>Construcciones Europa S.L</td>
                            </tr>
                            <tr>
                                <td>Fecha creación</td>
                                <td>20/10/2013</td>
                            </tr>
                            <tr>
                                <td>Servicio</td>
                                <td>Fiscal Autónomo</td>
                            </tr>
                            <tr>
                                <td>Categoria</td>
                                <td>Impuestos</td>
                            </tr>
                            <tr>
                                <td>Adjuntos</td>
                                <td>3</td>
                            </tr>
                            <tr>
                                <td>Estado</td>
                                <td>En trámite</td>
                            </tr>
                            <tr>
                                <td>Descripción cliente</td>
                                <td>Presentar IVA trimestral</td>
                            </tr>
                        </table>
                    </div>

                    <div class="span6">
                        <form id="estForm">
                            <fieldset>
                                <h4>Modificar estado de la gestión.</h4>
                                <label for="sel_estadoGestion">Estado</label>
                                <select id="sel_estadoGestion">
                                    <option value="none">- Seleccione un estado -</option>
                                    <option value="1">Nuevo</option>
                                    <option value="3">En trámite</option>
                                    <option value="4">En espera</option>
                                    <option value="5">Acción requerida</option>
                                    <option value="6">Fichero agregado cliente</option>
                                    <option value="7">Fichero agregado empresa</option>
                                    <option value="8">Resuelta</option>
                                    <option value="9">Cerrada sin resolver</option>
                                    <option value="10">Cerrada por el cliente</option>
                                </select>
                            </fieldset>
                        </form>
                    </div>


                    <div class="span6">
                        <form method="POST" class="newgest_form" {{ form_enctype(addFilesForm) }}>
                                <h4>Agregar Ficheros a la gestión</h4>
                                <fieldset style="padding-bottom: 30px">
                                {{ form_errors(addFilesForm) }}
                                {{ form_label(addFilesForm.file, 'Seleccionar archivo') }}
                                {{ form_widget(addFilesForm.file, {'full_name': addFilesForm.file.get('full_name')~'[]' })}}
                                {{ form_rest(addFilesForm) }}
                            </fieldset>
                            <input type="submit" class="btn btn-success" value="Enviar">
                        </form>
                    </div>

                    <div class="span12">
                        <form method="POST" class="newcomment_form">
                            <h4>Agregar nuevo comentario</h4>
                            <fieldset>
                                {{ form_errors(newGestCommForm) }}
                                {{ form_label(newGestCommForm.comentario, 'Comentario') }}
                                {{ form_widget(newGestCommForm.comentario) }}
                                {{ form_rest(newGestCommForm) }}
                            </fieldset>
                            <input type="submit" class="btn btn-success" value="Agregar comentario">
                        </form>
                    </div>

                    <div class="span6 scrollable-container">
                        <h4 style="border-bottom: 2px solid #000;">Ficheros adjuntos</h4>
                        <ul class="thumbnails" style="margin-left: 0px!important;">
                                <li class="span2">
                                    <div class="thumbnail bright">
                                        <img src="{{ asset('bundles/adminbundle/img/icons/pdf.jpg') }}" alt="">
                                        <h5 style="text-align: center">Facturas pagadas T2 2013</h5>
                                        <p style="text-align: center"><button class="btn btn-small btn-success">Descargar</button></p>
                                    </div>
                                </li>
                            <li class="span2">
                                <div class="thumbnail bright">
                                    <img src="{{ asset('bundles/adminbundle/img/icons/doc.jpg') }}" alt="">
                                    <h5 style="text-align: center">Facturas emitidas T2 2013</h5>
                                    <p style="text-align: center"><button class="btn btn-small btn-success">Descargar</button></p>
                                </div>
                            </li>
                            <li class="span2">
                                <div class="thumbnail bright">
                                    <img src="{{ asset('bundles/adminbundle/img/icons/png.jpg') }}" alt="">
                                    <h5 style="text-align: center">Justificante</h5>
                                    <p style="text-align: center"><button class="btn btn-small btn-success">Descargar</button></p>
                                </div>
                            </li>
                        </ul>
                    </div>

                    <div class="span6 scrollable-container">
                        <h4 style="border-bottom: 2px solid #000;">Comentarios anteriores</h4>
                        <div class="span6" style="margin: 15px 0;">
                            <div class="span5 comment" style="color: #000000">
                                <i class="icon-comment"></i> <span>Fecha: 5/08/2013 </span>
                                <span class="pull-right">Autor: ClienteDemo1</span>
                                <blockquote style="border-left: 5px solid #18DD18">
                                    <p>Comentario de ejemplo, creado por el cliente.</p>
                                </blockquote>
                            </div>
                        </div>

                        <div class="span6" style="margin: 15px 0;">
                            <div class="span5 comment">
                                <i class="icon-comment"></i> <span>Fecha: 6/08/2013 </span> <span class="pull-right">Autor: UsuarioDemo1 </span>
                                <blockquote style="border-left: 5px solid #3DBBE4"> <p class="te">Respuesta de ejemplo, creado por el gestor</p></blockquote>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    <div class="container" style="margin-top: 50px; margin-bottom: 25px ">
        <div class="span12">
            <a href="{{ path('mg_demo_gest_homepage') }}" class="btn btn-danger">Volver</a>
        </div>
    </div>

{% endblock %}

{% block customjs %}
    <script src="{{ asset('bundles/demobundle/js/custom.js') }}"></script>
    <script src="{{ asset('bundles/adminbundle/js/jquery.mCustomScrollbar.min.js') }}"></script>
    <script src="{{ asset('bundles/adminbundle/js/jquery.mousewheel.min.js') }}"></script>
    <script>
        (function($){
            $(window).load(function(){
                $(".scrollable-container").mCustomScrollbar({
                    scrollButtons:{
                        enable:true
                    },
                    theme:"dark"
                });
            });
        })(jQuery);
    </script>

{% endblock %}