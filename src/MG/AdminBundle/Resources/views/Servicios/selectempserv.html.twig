{% extends 'MGAdminBundle:Bases:base.html.twig' %}

{% block content %}

    <div class="container" style="margin-top: 50px">
        <div class="span10 hero-unit">
            <form>
                <fieldset style="text-align: center">
                   <h3 for="sel_empresaServ">Selecciona la empresa para mostrar los servicios</h3>
                        <select class="callToActionOpt" id="sel_empresaServ">
                            <option  value="none">- Seleccione una empresa -</option>
                            {% for empresa in empresas %}
                                <option value="{{ empresa.id }}">{{ empresa.nombre }}</option>
                            {% endfor %}
                        </select>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="container">
        <div class="span7">
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('mg_serv_create', {'empId':0, 'custom':0}) }}" class="btn btn-success btn-large">Nuevo Servicio</a>
            {% else %}
                <button class="btn btn-success btn-large" disabled>Nuevo Servicio</button>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block customjs %}
    <script src="{{ asset('bundles/adminbundle/js/custom.js') }}"></script>
{% endblock %}