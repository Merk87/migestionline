{% extends 'MGDemoBundle:Bases:base_admin.html.twig' %}


{% block content %}
    <div class="container">
        <div class="span12">
            <h2>Archivos almacenados</h2>
        </div>
    </div>

    <div class="container" style="margin-top: 25px">
        <table class="table table-bordered">
            <thead>
            <tr>
                <td colspan="2">Nombre archivo</td>
                <td>Categoría</td>
                <td>Servicio</td>
                <td>Fecha subida</td>
                <td colspan="2">Acciones</td>
            </tr>
            </thead>
            <tr>
                <td style="text-align: center"><img class="icon_mini" src="{{ asset('bundles/adminbundle/img/icons/pdf.jpg') }}" alt="Tipo de fichero" title=""></td>
                <td>Facturas Pagadas T2</td>
                <td>Categoría</td>
                <td>Servicio</td>
                <td>28-08-2013</td>
                <td>
                    <button class="btn btn-small btn-success disButton">Descargar</button>
                    <button class="btn btn-small btn-danger disButton">Eliminar</button>
                </td>
            </tr>
            <tr>
                <td style="text-align: center"><img class="icon_mini" src="{{ asset('bundles/adminbundle/img/icons/png.jpg') }}" alt="Tipo de fichero" title=""></td>
                <td>Justificante</td>
                <td>Categoría</td>
                <td>Servicio</td>
                <td>28-08-2013</td>
                <td>
                    <button class="btn btn-small btn-success" disabled>Descargar</button>
                    <button class="btn btn-small btn-danger" disabled>Eliminar</button>
                </td>
            </tr>
        </table>

        <div class="pagination">
            <ul>
                <li class="disabled"><span>&laquo;</span></li>
                <li class="active"><span><a href="{{ path('mg_demo_repoadmin_homepage') }}">1</span></a></li>
                <li class="disabled"><span>&raquo;</span></li>
            </ul>
        </div>

        <div class="container">
            <div class="span12">
                <button class="btn btn-info showS">Buscar por fecha</button>
                <a href="{{ path('mg_demo_repoadmin_homepage') }}" class="btn btn-danger">Volver</a>
            </div>
        </div>

        <div class="span10 formContainer">
            <h4>Busqueda de archivos por fecha</h4>
            <p>Establezca la fecha de inicio y de fin del intervalo, para mostrar todos los archivos agregados entre ambas.</p>
            <form>
                <fieldset>
                   <div style="margin-right: 15px">
                        <label for="fechaIni">Fecha de Inicio</label>
                        <input type="date" name="fechaIni">
                    </div>
                    <div>
                        <label for="fechaIni">Fecha de Fin</label>
                        <input type="date" name="fechaFin">
                    </div>

                </fieldset>
                <a href="{{ path('mg_demo_show_files_dates') }}" class="btn btn-success" >Buscar</a>
                <button class="btn btn-danger hideS">Volver</button>
            </form>
        </div>
    </div>
{% endblock %}
