{% extends 'MGAdminBundle:Bases:base.html.twig' %}

{% block content %}


    <div class="container">
        <div class="span9 hero-unit" style="min-width: 320px">
            <div class="row">
                <div class="span4">
                    <img class="img-polaroid" src="{{ asset(empresa.logoPath) }}" alt="{{ empresa.logoAlt }}" title="{{ empresa.logoTitle }}">
                </div>
                <div class="span5" style="padding-top: 10px">
                    <h4>Detalles de empresa</h4>
                    <table class="table table-bordered table-condensed table-striped">
                        {% if empresa.enabled == 0 %}
                            <tr class="error">
                                <td colspan="2" style="font-weight: bold">Inactiva</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td>Nombre</td>
                            <td>{{ empresa.nombre}}</td>
                        </tr>
                        <tr>
                            <td>CIF</td>
                            <td>{{ empresa.cif }}</td>
                        </tr>
                        <tr>
                        <td>Dirección</td>
                        <td>{{ empresa.direccion }}</td>
                        </tr>
                        <tr>
                            <td>Código Postal</td>
                            <td>{{ empresa.codigoPostal}}</td>
                        </tr>
                        <tr>
                            <td>Ciudad</td>
                            <td>{{ empresa.ciudad }}</td>
                        </tr>
                        <tr>
                            <td>País</td>
                            <td>{{ empresa.pais }}</td>
                        </tr>
                        <tr>
                            <td>Teléfono</td>
                            <td>{{ empresa.telefono}}</td>
                        </tr>
                        <tr>
                            <td>Página web</td>
                            <td>{{ empresa.web}}</td>
                        </tr>
                        {% if empresa.enabled == 1 %}
                            <tr class="success">
                                <td>Estado</td>
                                <td class="success">Activo</td>
                            </tr>
                        {% else %}
                            <tr class="warning">
                                <td>Estado</td>
                                <td class="error">Inactivo</td>
                            </tr>
                        {% endif %}
                        <tr>
                            <td>Teléfono</td>
                            <td>{{ empresa.telefono}}</td>
                        </tr>
                        <tr>
                            <td>Empleados</td>
                            <td><a href="{{ path('mg_user_by_empresa', {'empresaID': empresa.id, 'page': 1}) }}">{{ empleados }}</a></td>
                        </tr>
                        <tr>
                            <td>Clientes</td>
                            <td><a href="{{ path('mg_user_by_empresa_rol', {'empresaID': empresa.id, 'rolId':4, 'page': 1}) }}">{{ clientes }}</a></td>
                        </tr>
                    </table>
                </div>
                <div class="span9">
                    <a class="btn btn-large btn-info margined" href="{{ path('mg_empresa_update', {'empId': empresa.id}) }}">Editar</a>
                    {% if empresa.enabled  != 1%}
                        <a class="btn btn-large btn-danger margined" href="{#{{ path('mg_user_block', {'userName': empresa.username}) }}#}">Bloquear</a>
                    {% else %}
                        <a class="btn btn-large btn-danger margined" href="{#{{ path('mg_user_block', {'userName': empresa.username}) }}#}">Desbloquear</a>
                    {% endif %}
                    <a class="btn btn-large margined" href="{{ path('mg_empadmin_homepage', {'page': 1 }) }}">Volver</a>
                </div>
            </div>
        </div>

    </div>

{% endblock %}